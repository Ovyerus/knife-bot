{
    "env": {
        "es6": true,
        "node": true
    },

    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },

    "rules": {
        "no-console": 0,
        "global-require":"off",
        
        "quotes": [
            "warn",
            "single",
			{"avoidEscape": true, "allowTemplateLiterals": true}
        ],

		"semi": [
		    "warn",
			"always"
		],
        
		"indent": [
		    "error",
			4
		]
    }
}